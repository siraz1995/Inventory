@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
@{
    string menuTextColor = "text-white";
}
<div class="container IndexDiv">
<div class="row">
    <div class="col-3 container CenteredContainer text-center">
        <section>
            <form id="account" method="post">
                    <h2 class="fw-bold mb-2 text-uppercase @menuTextColor">Login</h2>
                    <p class="text-white-50 mb-5 @menuTextColor">Please enter your username and password!</p>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                        <input asp-for="Input.UserName" class="form-control mb-0" autocomplete="username" aria-required="true" placeholder="UserName" />

                    </div><br />
                <div class="form-group">
                        <input asp-for="Input.Password" class="form-control mb-0" autocomplete="current-password" aria-required="true" placeholder="Password" />

                    </div><br />
                    <div class="form-group text-white-50">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" >
                                <input asp-for="Input.RememberMe" style="width:auto;" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div><br />
                   @* <div class="form-group">                    
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" >
                            <input class="form-check-input" asp-for="Input.RememberMe" style="width:auto;" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>*@
                @*<div class="form-group">
                    <input  type="submit" class="btn btn-danger text-white" value="Log in">
                </div>*@
                    <div class="form-group">
                        <input type="submit" class="btn btn-danger text-white mb-0"  value="Log in">
                    </div><br />
                    <div class="form-group">
                       @* <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>*@
                        <p class="mb-0 @menuTextColor">
                            Don't have an account? <a asp-page="./Register" class="text-white-50 fw-bold" asp-route-returnUrl="@Model.ReturnUrl" >Sign Up</a>
                        </p>
                    </div>

                <div class="form-group"> 
                   @* <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>*@
                   @* <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>*@
                </div>
            </form>
        </section>
    </div>
    
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
