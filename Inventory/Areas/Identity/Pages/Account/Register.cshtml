@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@{
    string menuTextColor = "text-white";
}
<div class="container IndexDiv">
    <div class="row">
        <div class="col-3 container CenteredContainer text-center">

            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h5 class="text-white">Create a new account.</h5>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <input asp-for="Input.UserName" class="form-control" placeholder="UserName" />
                </div><br />

                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                </div><br />
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" type="password"/>
                </div><br />
                <div class="form-group">
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" />
                </div><br />
                <input type="submit"  class="btn btn-danger" value="Register"><br />
               
                <div class="form-group">
                    
                    <p class="mb-0 @menuTextColor">
                     Have already an account? <a asp-page="./Login" class="text-white-50 fw-bold" asp-route-returnUrl="@Model.ReturnUrl">Login here</a>
                    </p>
                </div>
            </form>
        </div>

    </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
